  font-family 'Century-Gothic-Regular'
  src url('../fonts/Century-Gothic-Regular.woff'), url('../fonts/Century-Gothic-Regular.woff2')
  font-display swap
@font-face
  font-family 'Manrope-Bold'
  src url('../fonts/Manrope-Bold.woff'), url('../fonts/Manrope-Bold.woff2')
  font-display swap

@font-face
  font-family 'Onest-Bold'
  src url('../fonts/Onest-Bold.woff'), url('../fonts/Onest-Bold.woff2')
  font-display swap
@font-face
  font-family 'Onest-ExtraLight'
  src url('../fonts/Onest-ExtraLight.woff'), url('../fonts/Onest-ExtraLight.woff2')
  font-display swap
@font-face
  font-family 'Onest-Light'
  src url('../fonts/Onest-Light.woff'), url('../fonts/Onest-Light.woff2')
  font-display swap
@font-face
  font-family 'Onest-Medium'
  src url('../fonts/Onest-Medium.woff'), url('../fonts/Onest-Medium.woff2')
  font-display swap
