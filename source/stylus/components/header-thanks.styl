.header-thanks
  &__container
    display: flex
    justify-content space-between
    align-items: center

  &__brand-block
    +above($breakpoints.sm)
      display: flex
      align-items: center
      gap: 10px
    +above($breakpoints.sm)
      gap: 15px
    +above($breakpoints.xxl)
      gap: 20px

  &__line
    width 1px
    height: 40px
    background-color #fff
    +above($breakpoints.sm)
      height: 48px
    +above($breakpoints.md)
      height: 54px
    +above($breakpoints.xxl)
      height: 60px

  &__brand,
  &__line
    display: none
    +above($breakpoints.sm)
      display: block

  &__logo
    width 120px
    height: auto
    +above($breakpoints.sm)
      width 100px
    +above($breakpoints.md)
      width 110px
    +above($breakpoints.xxl)
      width 123px

  &__connection
    display: flex
    align-items: center
    justify-content center
    gap: 5px
    +above($breakpoints.sm)
      gap: 10px
    +above($breakpoints.md)
      gap: 16px
    +above($breakpoints.xxl)
      gap: 20px

  &__connection-icon
    width 12px
    height: 12px
    +above($breakpoints.sm)
      width 16px
      height: 16px
    +above($breakpoints.md)
      width 20px
      height: 20px
    +above($breakpoints.xxl)
      width 24px
      height: 24px
