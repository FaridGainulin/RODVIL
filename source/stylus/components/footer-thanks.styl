.footer-thanks
  background-color #fff

  &__container
    display: flex
    align-items: center
    flex-direction: column
    gap: 10px
    color: #222222
    padding 15px 0
    +above($breakpoints.sm)
      gap: 0
      flex-direction: row
      justify-content space-between
      padding 20px 0
    +above($breakpoints.md)
      padding 30px 0
    +above($breakpoints.xxl)
      padding 40px 0

  &__logo
    width 120px
    height: auto
    +above($breakpoints.sm)
      width 120px
    +above($breakpoints.md)
      width 160px
    +above($breakpoints.xxl)
      width 188px

  &__block
    display: none
    +above($breakpoints.sm)
      display: block

  &__privacy
    cursor pointer
    text-decoration: underline

  &__connection
    display: flex
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      gap: 8px
    +above($breakpoints.md)
      gap: 9px
    +above($breakpoints.xxl)
      gap: 10px

  &__connection-icon
    width 12px
    height: 12px
    +above($breakpoints.sm)
      width 13px
      height: 13px
    +above($breakpoints.md)
      width 14px
      height: 14px
    +above($breakpoints.xxl)
      width 16px
      height: 16px
