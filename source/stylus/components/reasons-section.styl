.reasons-section
  // background-image: url('../images/reasons-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background: linear-gradient(144deg, #342893 0%, #363067 100%);
  position relative
  z-index 1

  &__container
    position relative
    padding 20px 0 20px 0
    text-align: center
    +above($breakpoints.sm)
      padding 40px 0 30px 0
    +above($breakpoints.md)
      padding 70px 0 50px 0
    +above($breakpoints.xxl)
      padding 100px 0 89px 0

  &__title
    padding 0 0 20px 0
    +above($breakpoints.sm)
      padding 0 0 30px 0
    +above($breakpoints.md)
      padding 0 0 40px 0
    +above($breakpoints.xxl)
      padding 0 0 50px 0

  &__cards
    +above($breakpoints.sm)
      display: flex
      justify-content space-between

  &__card
    display: flex
    flex-direction: column
    align-items: center
    gap: 8px
    width 280px !important
    +above($breakpoints.sm)
      gap: 12px
      width 180px !important
    +above($breakpoints.md)
      gap: 16px
      width 240px !important
    +above($breakpoints.xxl)
      width 262px !important
      gap: 18px

  &__card-icon
    width 50px
    height: 50px
    +above($breakpoints.sm)
      width 60px
      height: 60px
    +above($breakpoints.md)
      width 70px
      height: 70px
    +above($breakpoints.xxl)
      width 80px
      height: 80px
    +above($breakpoints.xxl)
      width 80px
      height: 80px

  &__bottom-title
    padding 0 0 15px 0
    +above($breakpoints.sm)
      padding 30px 0 20px
    +above($breakpoints.md)
      padding 50px 0 25px
    +above($breakpoints.xxl)
      padding 70px 0 30px

  &__form
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    margin-top 15px
    +above($breakpoints.sm)
      flex-direction: row
      justify-content center
      gap: 8px
      margin-top 20px
    +above($breakpoints.md)
      gap: 12px
      margin-top 25px
    +above($breakpoints.xxl)
      margin-top 30px
      gap: 14px
    & > *
      width 280px !important
    input
      +above($breakpoints.sm)
        width 200px !important
      +above($breakpoints.md)
        width 240px !important
      +above($breakpoints.xxl)
        width 280px !important
    button
      +above($breakpoints.sm)
        width 245px !important
      +above($breakpoints.md)
        width 270px !important
      +above($breakpoints.xxl)
        width 320px !important
