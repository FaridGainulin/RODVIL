.steps-section
  // background-image: url('../images/steps-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background-color #363067

  &__container
    position relative
    padding 20px 0 50px 0
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding 60px 0 90px 0
    +above($breakpoints.md)
      padding 80px 0 150px 0
    +above($breakpoints.xxl)
      padding 100px 0 194px 0

  &__sub-title
    padding 15px 0 15px 0
    +above($breakpoints.sm)
      padding 20px 0 30px 0
    +above($breakpoints.md)
      padding 25px 0 35px 0
    +above($breakpoints.xxl)
      padding 30px 0 40px 0

  &__box
    display: flex
    flex-direction: column
    align-items: center
    +above($breakpoints.sm)
      flex-direction: row-reverse
      align-items: flex-end
      justify-content: flex-end
      gap: 60px
    +above($breakpoints.md)
      gap: 75px
    +above($breakpoints.xxl)
      gap: 124px

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-direction: column
      gap: 10px
    +above($breakpoints.md)
      gap: 15px
    +above($breakpoints.xxl)
      gap: 20px

  &__card
    width 280px !important
    display: flex
    align-items: flex-start
    justify-content center
    gap: 5px
    +above($breakpoints.sm)
      width 335px !important
      justify-content start
      gap: 10px
    +above($breakpoints.md)
      width 450px !important
      gap: 14px
    +above($breakpoints.xxl)
      width 500px !important
      gap: 17px

  &__card-icon
    width 10px
    height: 10px
    +above($breakpoints.sm)
      width 12px
      height: 12px
    +above($breakpoints.md)
      width 14px
      height: 14px
    +above($breakpoints.xxl)
      width 15px
      height: 15px

  &__img
    display: none
    +above($breakpoints.sm)
      display: block
      width 300px
      height: auto
    +above($breakpoints.md)
      width 400px
    +above($breakpoints.xxl)
      width 476px

  &__img-mobile
    width 280px
    height: auto
    margin 0 auto
    +above($breakpoints.sm)
      display: none

  &__bottom
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 15px
    margin-top 15px
    +above($breakpoints.sm)
      flex-direction: row
      align-items: flex-end
      gap: 10px
      margin-top 30px
      margin-left 62px
    +above($breakpoints.md)
      margin-top 50px
      margin-left 85px
    +above($breakpoints.xxl)
      margin-top 60px
      margin-left 100px

  &__btn
    width 280px !important
    +above($breakpoints.sm)
      width 290px !important
    +above($breakpoints.md)
      width 330px !important
    +above($breakpoints.xxl)
      width 380px !important
