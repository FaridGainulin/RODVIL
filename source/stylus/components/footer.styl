.footer
  &__container
    display: flex
    align-items: center
    flex-direction: column
    gap: 10px
    color: #363067
    +above($breakpoints.sm)
      flex-direction: row
      justify-content space-between

  &__logo
    width 120px
    height: auto
    +above($breakpoints.sm)
      width 130px
    +above($breakpoints.md)
      width 170px
    +above($breakpoints.xxl)
      width 197px

  &__block
    display: none
    +above($breakpoints.sm)
      display: block
      text-align: center

  &__privacy
    cursor pointer
    text-decoration: underline
    +above($breakpoints.sm)
      display: none

  &__connection
    display: flex
    align-items: center
    justify-content center
    gap: 5px
    background: rgba(255, 255, 255, 0.3)
    border-radius: 33px
    width 145px
    height: 25px
    +above($breakpoints.sm)
      gap: 7px
      width 155px
      height: 30px
    +above($breakpoints.md)
      gap: 8px
      width 220px
      height: 35px
    +above($breakpoints.xxl)
      gap: 9px
      width 230px
      height: 43px

  &__connection-icon
    width 12px
    height: 12px
    +above($breakpoints.sm)
      width 13px
      height: 13px
    +above($breakpoints.md)
      width 14px
      height: 14px
    +above($breakpoints.xxl)
      width 16px
      height: 16px
