.fill-section
  background-image: url('../images/fill-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #100b0b
  width 100%
  height: 100%
  max-height: 390px
  +above($breakpoints.sm)
    max-height: 510px
  +above($breakpoints.md)
    max-height: 690px
  +above($breakpoints.xxl)
    max-height: 958px
