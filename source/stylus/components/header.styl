.header
  &__container
    display: flex
    justify-content space-between
    align-items: center
    color: #363067

  &__brand-block
    +above($breakpoints.sm)
      display: flex
      align-items: center
      gap: 50px
    +above($breakpoints.md)
      gap: 90px
    +above($breakpoints.xxl)
      gap: 103px

  &__brand
    display: none
    +above($breakpoints.sm)
      display: block

  &__logo
    width 140px
    height: auto
    +above($breakpoints.sm)
      width 170px
    +above($breakpoints.md)
      width 180px
    +above($breakpoints.xxl)
      width 197px

  &__connection-block
    +above($breakpoints.sm)
      display: flex
      align-items: center
      gap: 10px
    +above($breakpoints.md)
      gap: 20px
    +above($breakpoints.xxl)
      gap: 30px

  &__call-me
    display: none
    +above($breakpoints.sm)
      display: block
      text-decoration: underline
      cursor pointer

  &__connection
    display: flex
    align-items: center
    justify-content center
    gap: 5px
    background: rgba(255, 255, 255, 0.3)
    border-radius: 33px
    width 145px
    height: 25px
    +above($breakpoints.sm)
      gap: 7px
      width 155px
      height: 30px
    +above($breakpoints.md)
      gap: 8px
      width 220px
      height: 35px
    +above($breakpoints.xxl)
      gap: 9px
      width 230px
      height: 43px

  &__connection-icon
    width 12px
    height: 12px
    +above($breakpoints.sm)
      width 13px
      height: 13px
    +above($breakpoints.md)
      width 14px
      height: 14px
    +above($breakpoints.xxl)
      width 16px
      height: 16px
